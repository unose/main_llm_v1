cat > /etc/systemd/system/llm_api.service <<'EOF'
[Unit]
Description=UniXcoder Flask API
After=network.target

[Service]
Type=simple
User=myoungkyu
WorkingDirectory=/home/myoungkyu/main_llm_v1
Environment="PATH=/home/myoungkyu/main_llm_v1/venv/bin"
ExecStart=/home/myoungkyu/main_llm_v1/venv/bin/gunicorn api.index:app \
  --bind 0.0.0.0:8000 \
  --workers 2
Restart=always

[Install]
WantedBy=multi-user.target
EOF
